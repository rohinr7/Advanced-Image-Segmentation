{
    "experiment_name": "experiment1",
    "paths": {
        "data": "/net/ens/am4ip/datasets/project-dataset"
    },
    "dataset_split": {
        "train": 0.8,
        "val": 0.1,
        "test": 0.1
    },
    "data": {
        "shuffle": true,
        "num_workers": 4,
        "pin_memory": true
    },
    "hyperparameters": {
        "batch_size": 16,
        "learning_rate": "1e-5",
        "epochs": 50,
        "seed": 42,
        "input_channels": 3,
        "output_channels": 34,
        "mixed_precision": true
    },
    "model": {
        "name": "UNet",
        "pretrained": false
    },
    "loss": {
        "name": "DiceLoss",
        "params": {}
    },
    "optimizer": {
        "name": "Adam",
        "params": {
            "lr": 0.0001,
            "weight_decay": 0.0001
        }
    },
    "scheduler": {
        "name": "CosineAnnealingLR",
        "params": {
            "T_max": 10,
            "eta_min": 1e-06
        }
    },
    "metrics": {
        "iou": true,
        "pixel_accuracy": true,
        "dice": true
    },
    "early_stopping": {
        "enabled": true,
        "patience": 5,
        "metric": "val_loss"
    },
    "augmentation": {
        "use_augmentation": false,
        "params": {
            "horizontal_flip": true,
            "rotation_range": 15,
            "brightness_adjust": 0.2,
            "contrast_adjust": 0.2,
            "scale_range": [
                0.8,
                1.2
            ],
            "gaussian_noise": 0.05,
            "random_crop": [
                256,
                256
            ]
        }
    },
    "logging": {
        "log_level": "INFO",
        "tensorboard": true,
        "gradient_monitoring": true
    },
    "evaluation": {
        "use_test_set": true,
        "batch_size": 16
    },
    "class_names": [
        "Unlabeled",
        "Unused",
        "Unused",
        "Unused",
        "Static",
        "Dynamic",
        "Ground",
        "Road",
        "Sidewalk",
        "Parking",
        "Rail track",
        "Building",
        "Wall",
        "Fence",
        "Guard rail",
        "Bridge",
        "Tunnel",
        "Pole",
        "Pole group",
        "Traffic light",
        "Traffic sign",
        "Vegetation",
        "Terrain",
        "Sky",
        "Person",
        "Rider",
        "Car",
        "Truck",
        "Bus",
        "Caravan",
        "Trailer",
        "Train",
        "Motorcycle",
        "Bicycle"
    ]
}